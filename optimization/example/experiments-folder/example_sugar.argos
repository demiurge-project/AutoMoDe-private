<?xml version="1.0" ?>
<argos-configuration>
  <!-- ************* -->
  <!-- * Framework * -->
  <!-- ************* -->
  <framework>
    <experiment length="60"
                ticks_per_second="10" random_seed="0"/>
  </framework>

  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->
  <loop_functions library="/home/jszpirer/RL/experiments-loop-functions/build/loop-functions/sugar/libaggregation_loopfunc.so"
   label="aggregation_loop_functions">
   <params dist_radius="0.933" number_robots="5"/>
  </loop_functions>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
	<!-- TRANSMITTER -->
    <automode_controller id="automode"
                        library="../../../build/src/libautomode.so">
      <actuators>
        <epuck_wheels implementation="default" noise_std_dev="0.05"/>
        <epuck_rgb_leds implementation="default" medium="leds"/>
        <epuck_range_and_bearing implementation="medium" medium="rab" data_size="4" range="0.7"/>
      </actuators>
      <sensors>
        <epuck_proximity implementation="default" show_rays="false" noise_level="0.05" calibrated="true"/>
        <epuck_range_and_bearing implementation="medium" medium="rab" data_size="4" nois_std_deviation="1.5" loss_probability="0" calibrated="true"/>
        <epuck_light implementation="default" show_rays="false" noise_level="0.05" calibrated="true"/>
        <epuck_ground implementation="rot_z_only" noise_level="0.05" calibrated="true"/>
        <epuck_omnidirectional_camera implementation="rot_z_only" medium="leds" show_rays="false"/>
      </sensors>
      <params readable='true' history='false' hist-folder='./fsm_history/' fsm-config="--nstates 1 --s0 5 --rep0 5"/>
    </automode_controller>
    
    <!-- Patch controller -->
    <patchautomode_controller id="patchautomode" library="../../../build/src/libpatchautomode.so">
    <actuators>
        <epuck_range_and_bearing implementation="medium" medium="rab" data_size="4" range="0.7"/>
      </actuators>
    <sensors>
        <epuck_range_and_bearing implementation="medium" medium="rab" data_size="4" nois_std_deviation="1.5" loss_probability="0" calibrated="true"/>
      </sensors>
    <params readable='false' history='false' hist-folder='./fsm_history/' fsm-config="--nstates 2 --s0 4 --att0 5 --n0 1 --n0x0 1 --c0x0 0 --p0x0 1.0 --s1 1 --n1 2 --n1x0 0 --c1x0 5 --p1x0 0.25 --n1x1 0 --c1x1 1 --p1x1 1"/>
    </patchautomode_controller>
  </controllers>

  <!-- ********* -->
  <!-- * Arena * -->
  <!-- ********* -->
  <arena size="10, 10, 1" center="0,0,0">

  <!-- Change the floor here -->
  <floor id="floor" source="loop_functions" pixels_per_meter="300"/>

  <!-- Change the light here -->
	<light id="light" position="0,-1.5,0.4" orientation="0,0,0" color="yellow" intensity="0.0" medium="leds"/>

  <!--Square arena with side of length 4-->
  <box id="wall_1" size="0.01,1.866,0.08" movable="false">
    <body position="-0.933,0,0" orientation="0,0,0"/>
  </box>
  <box id="wall_2" size="0.01,1.866,0.08" movable="false">
    <body position="0.933,0,0" orientation="0,0,0"/>
  </box>
  <box id="wall_3" size="0.01,1.866,0.08" movable="false">
    <body position="0,0.933,0" orientation="90,0,0"/>
  </box>
  <box id="wall_4" size="0.01,1.866,0.08" movable="false">
    <body position="0,-0.933,0" orientation="90,0,0"/>
  </box>

        <!-- ********** -->
        <!-- * E-Puck * -->
        <!-- ********** -->

        <!-- The epucks are distributed by the AutoMoDeLoopFunctions. -->
        <distribute>
            <position method="uniform" min="-1,-1,0" max="1,1,0" />
            <orientation method="gaussian" mean="0,0,0" std_dev="360,0,0" />
            <entity quantity="20" max_trials="100">
                <e-puck id="epuck">
                    <controller config="automode" />
                </e-puck>
            </entity>
        </distribute>
  
  <!-- ************************ -->
  <!-- * E-Puck for the patch * -->
  <!-- ************************ -->

  <e-puck id="epuckpatch_100"> 
	  <body position="0,0,0" orientation="0,0,0"/>
      <controller config="patchautomode"/>
  </e-puck>
  <e-puck id="epuckpatch_101"> 
	  <body position="0,0,0" orientation="0,0,0"/>
      <controller config="patchautomode"/>
  </e-puck>

  
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <led id="leds" grid_size="1,1,1"/>
    <range_and_bearing id="rab"/>
  </media>

  <!-- ***************** -->
  <!-- * Visualization * -->
  <!-- ***************** -->
  <visualization>
        <qt-opengl>
            <camera>
                <placement idx="0" position="0,0,4.5" look_at="0,0,0" lens_focal_length="30" />
            </camera>
        </qt-opengl>
    </visualization>

</argos-configuration>
